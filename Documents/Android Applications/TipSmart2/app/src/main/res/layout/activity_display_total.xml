<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_total"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/myImage2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/image_contains_our_logo"
        android:paddingBottom="16dp"
        android:src="@drawable/tipsmartapplogo" />


    <TextView
        android:id="@+id/tvPerPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvEachPerson"
        android:layout_alignBottom="@+id/tvEachPerson"
        android:layout_alignStart="@+id/tvTip"
        android:paddingBottom="16dp"
        android:text="@string/cashPerPerson"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/tvEachPerson"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvTipCount"
        android:layout_below="@+id/tvTipCount"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif"
        android:text="@string/each_pays"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvTipCount"
        android:layout_alignBottom="@+id/tvTipCount"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/tvTipCount"
        android:paddingBottom="16dp"
        android:text="@string/tipHolder"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myImage2"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:paddingBottom="16dp"
        android:text="@string/total"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:fontFamily="sans-serif"
        tools:textSize="16sp"
        tools:textStyle="bold" />

    <TextView
        android:id="@+id/tvTipCount"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvGrandTotal"
        android:layout_below="@+id/tvGrandTotal"
        android:layout_marginTop="21dp"
        android:fontFamily="sans-serif"
        android:paddingBottom="16dp"
        android:text="@string/tipString"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:fontFamily="sans-serif"
        tools:textSize="16sp" />

    <TextView
        android:id="@+id/tvGrandTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myImage2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="@string/grandTotalHolder"
        android:textColor="@color/colorWhite"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:fontFamily="sans-serif-smallcaps"
        tools:textSize="36sp" />

    <Button
        android:id="@+id/bReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:background="@color/colorWhite"
        android:paddingBottom="16dp"
        android:text="@string/reset"
        android:textColor="@color/colorPrimaryDark"
        tools:fontFamily="sans-serif-smallcaps" />
</RelativeLayout>