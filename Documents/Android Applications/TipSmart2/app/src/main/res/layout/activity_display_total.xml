<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_display_total"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/myImage2"
        android:src="@drawable/tipsmartapplogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingBottom="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="$$$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:id="@+id/tvGrandTotal"
        android:paddingBottom="16dp"
        tools:fontFamily="sans-serif"
        tools:textSize="36sp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />


    <TextView
        android:text="$$$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:id="@+id/tvPerPerson"
        android:paddingBottom="16dp"
        tools:fontFamily="sans-serif-smallcaps"
        android:textSize="16dp"
        android:textStyle="bold"
        android:singleLine="false"
        android:layout_alignBaseline="@+id/tvEachPerson"
        android:layout_alignBottom="@+id/tvEachPerson"
        android:layout_alignStart="@+id/tvTip" />

    <TextView
        android:text="Each Pays: "
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:id="@+id/tvEachPerson"
        android:textStyle="bold"
        android:textSize="16dp"
        android:fontFamily="sans-serif"
        tools:fontFamily="sans-serif"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/tvTipCount"
        android:layout_alignStart="@+id/tvTipCount" />

    <Button
        android:text="Reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/bReset"
        android:paddingBottom="16dp"
        tools:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/tvPerPerson"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:text="$$$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:id="@+id/tvTip"
        android:paddingBottom="16dp"
        tools:fontFamily="sans-serif-smallcaps"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tvTipCount"
        android:layout_alignBottom="@+id/tvTipCount"
        android:layout_toEndOf="@+id/tvTipCount"
        android:layout_marginStart="28dp" />

    <TextView
        android:text="Tip :  "
        android:layout_height="wrap_content"
        android:id="@+id/tvTipCount"
        android:paddingBottom="16dp"
        android:textColor="@color/colorWhite"
        tools:fontFamily="sans-serif"
        android:textStyle="bold"
        tools:textSize="16dp"
        android:fontFamily="sans-serif"
        android:textSize="16dp"
        android:layout_width="150dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/tvGrandTotal"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:text="Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView5"
        android:paddingBottom="16dp"
        tools:fontFamily="sans-serif"
        android:textStyle="bold"
        tools:textStyle="bold"
        tools:textSize="16dp"
        android:fontFamily="sans-serif"
        android:textSize="16dp"
        android:layout_below="@+id/myImage2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />
</RelativeLayout>